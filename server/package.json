{
  "name": "server",
  "version": "1.0.0",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "start:dev": "cross-env NODE_ENV=development node app.js",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "seed": "node utils/seedData.js seed",
    "seed:clear": "node utils/seedData.js clear",
    "seed:reset": "node utils/seedData.js reset",
    "logs:clear": "del logs\\*.log 2>nul || echo 'No logs to clear'",
    "health": "curl http://localhost:5000/health"
  },
