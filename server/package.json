    "express-validator": "^7.2.1",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.2",
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
